

import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;
import java.sql.*;


public class CheckO extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String name = request.getParameter("nm");
		String pass = request.getParameter("ps");
		
		PrintWriter pw = response.getWriter();
		pw.println("user : "+name+"\n password : "+pass);
		
		try {
			Class.forName("oracle.jdbc.OracleDriver");
			pw.println("Driver Loaded...");
			Connection con = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","admin","admin");
			PreparedStatemant ps =con.prepareStatement(pass, 0)
			pw.println("Conection Estabilished...");
			
		} catch (Exception e) {
			pw.println(" Error for YOU : " + e.getMessage());
			e.printStackTrace();
			
		}
	}

}
